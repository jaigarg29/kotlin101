<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_bg_topic_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/selected_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:singleLine="true">

        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_topic"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/vert_dots" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semi_bold"
        tools:text="British Raj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/note_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subtext_color"
            android:textSize="12sp"
            tools:text="2 Notes Added" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/started_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subtext_color"
            android:textSize="12sp"
            tools:text="Started on : 3/10" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/revision_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Mark as Revised"
        app:cornerRadius="8dp"
        app:icon="@drawable/arrow_button"
        android:layout_marginTop="12dp"
        app:iconGravity="end"
        app:iconSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/tine_line_background"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:id="@+id/time_line_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <View
                android:id="@+id/circle_1"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_for_timeline" />

            <View
                android:id="@+id/line_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#E3E5E5" />

            <View
                android:id="@+id/circle_2"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_for_timeline" />

            <View
                android:id="@+id/line_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#E3E5E5" />

            <View
                android:id="@+id/circle_3"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_for_timeline" />

            <View
                android:id="@+id/line_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#E3E5E5" />

            <View
                android:id="@+id/circle_4"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/circle_for_timeline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_line_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="4/10" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="7/10" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="14/10" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="24/10" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>