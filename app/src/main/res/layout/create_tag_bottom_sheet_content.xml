<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/drag_handle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Create Tag"
        android:textSize="20sp"
        app:fontFamily="@font/poppins_semi_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tag"
        android:textColor="@color/subtext_color"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tag_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_bg_dark_blue"
        android:hint="Tag Name"
        android:paddingLeft="24dp"
        android:textColor="@color/black"
        android:textColorHint="@color/subtext_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Color"
        android:textColor="@color/subtext_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/red_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#F74940" />

        <View
            android:id="@+id/yellow_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#FFB904" />

        <View
            android:id="@+id/orange_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/orange_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#FA8A06" />

        <View
            android:id="@+id/green_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/green_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#9AC002" />

        <View
            android:id="@+id/blue_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#1CB0F7" />

        <View
            android:id="@+id/violet_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/violet_circle_selector"
            android:clickable="true"
            android:focusable="true"
            android:tag="#A141FB" />

        <View
            android:id="@+id/brown_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/brown_circle_selector"
            android:clickable="true"
            android:tag="#A17D42"
            android:focusable="true" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:text="Tags help you group similar topics for better accessibility."
        android:textColor="#1057DA"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_tag_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/poppins_medium"
        android:text="Add Tag"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>